{% extends 'base.html.twig' %}

{% block title %}New Measurement{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <h2 class="mb-4">New Measurement</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.location, 'Location', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.location) }}</span>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.date) }}</span>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.celsius, 'Temperature (Â°C)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.celsius, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.celsius) }}</span>
                    </div>

                    <button type="submit" class="btn btn-primary"
                            {% if form.vars.errors|length > 0 %}disabled{% endif %}>
                        Create
                    </button>

                    {{ form_end(form) }}
                </div>
                <a href="{{ path('app_measurement_index') }}" class="d-block mt-3">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
